{
    "name": "Protonmail-Desktop",
    "productName": "Protonmail desktop",
    "version": "0.1.0",
    "description": "Unofficial Protonmail desktop app",
    "license": "MIT",
    "repository": "beatplus/protonmail",
    "author": {
        "name": "Matthew Core <BeatPlus>",
        "email": "matcore@protonmail.com"
    },
    "scripts": {
        "test": "xo",
        "start": "electron .",
        "build": "npm run build:osx && npm run build:linux && npm run build:windows",
        "build:osx": "electron-packager . --overwrite --asar --out=dist --ignore='^media$' --prune --platform=darwin --arch=x64 --icon=static/Icon.icns --app-bundle-id=com.sindresorhus.caprine --sign='Developer ID Application: Sindre Sorhus (YG56YK5RN5)' --app-version=$npm_package_version && cd dist/Pronmail-desktop-darwin-x64 && zip -ryXq9 ../Pronmail-desktop-osx-${npm_package_version}.zip Pronmail-desktop.app",
        "build:linux": "electron-packager . --overwrite --asar --out=dist --ignore='^media$' --prune --platform=linux --arch=x64 --app-bundle-id=com.beatplus.pronmail-desktop --app-version=$npm_package_version && cd dist/Caprine-linux-x64/ && zip -ryq9 ../Pronmail-desktop-linux-${npm_package_version}.zip *",
        "build:windows": "electron-packager . --overwrite --asar --out=dist --ignore='^media$' --prune --platform=win32 --arch=ia32 --icon=static/Icon.ico --version-string.ProductName=$npm_package_productName --app-version=$npm_package_version && cd dist/Pronmail-desktop-win32-ia32 && zip -ryq9 ../Pronmail-desktop-windows-${npm_package_version}.zip *"
    },
    "dependencies": {
        "electron-debug": "^0.7.0",
        "electron-dl": "^0.2.0",
        "electron-osx-appearance": "^0.1.1",
        "electron-prebuilt": "^1.1.0",
        "xo": "^0.15.1"
    },
    "devDependencies": {
        "electron-packager": "^7.0.0",
        "electron-prebuilt": "*",
        "xo": "*"
    },
    "xo": {
        "esnext": true,
        "envs": [
            "node",
            "browser"
        ]
    }
}
